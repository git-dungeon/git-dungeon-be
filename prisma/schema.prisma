generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_SHADOW_URL")
  relationMode      = "foreignKeys"
}

model User {
  id            String   @id @default(uuid()) @db.Uuid
  email         String   @unique
  emailVerified Boolean  @default(false)
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts          Account[]
  sessions          Session[]
  state             DungeonState?
  logs              DungeonLog[]
  stateSnapshots    DungeonStateSnapshot[]
  inventoryItems    InventoryItem[]
  apSyncLogs        ApSyncLog[]
  collectionEntries UserCollectionEntry[]
  githubSyncState   GithubSyncState?
}

model Account {
  id                    String    @id @default(uuid()) @db.Uuid
  providerId            String
  accountId             String
  userId                String    @db.Uuid
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Verification {
  id         String   @id @default(uuid()) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@index([expiresAt])
}

model RateLimit {
  key         String   @id
  count       Int      @default(0)
  lastRequest BigInt
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum DungeonAction {
  IDLE
  EXPLORING
  EMPTY
  BATTLE
  REST
  TREASURE
  TRAP
}

enum InventorySlot {
  WEAPON
  ARMOR
  HELMET
  RING
  CONSUMABLE
  MATERIAL
}

enum InventoryRarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}

enum ApSyncStatus {
  SUCCESS
  FAILED
  PARTIAL
}

enum ApSyncTokenType {
  OAUTH
  PAT
}

enum UserCollectionTargetType {
  ITEM
  MONSTER
}

model DungeonState {
  userId                 String        @id @db.Uuid
  level                  Int           @default(1)
  exp                    Int           @default(0)
  hp                     Int           @default(10)
  maxHp                  Int           @default(10)
  atk                    Int           @default(1)
  def                    Int           @default(1)
  luck                   Int           @default(1)
  levelUpPoints          Int           @default(0)
  levelUpRollIndex       Int           @default(0)
  unopenedChests         Int           @default(0)
  chestRollIndex         Int           @default(0)
  equipmentBonus         Json?
  statsVersion           Int           @default(0)
  floor                  Int           @default(1)
  maxFloor               Int           @default(1)
  floorProgress          Int           @default(0)
  gold                   Int           @default(0)
  ap                     Int           @default(0)
  currentAction          DungeonAction @default(IDLE)
  currentActionStartedAt DateTime?
  createdAt              DateTime      @default(now())
  version                Int           @default(1)
  updatedAt              DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([updatedAt])
  @@index([version])
}

enum DungeonLogCategory {
  EXPLORATION
  STATUS
}

enum DungeonLogAction {
  BATTLE
  DEATH
  REVIVE
  MOVE
  REST
  TRAP
  EMPTY
  TREASURE
  ACQUIRE_ITEM
  EQUIP_ITEM
  UNEQUIP_ITEM
  DISCARD_ITEM
  DISMANTLE_ITEM
  ENHANCE_ITEM
  BUFF_APPLIED
  BUFF_EXPIRED
  STAT_APPLIED
  LEVEL_UP
}

enum DungeonLogStatus {
  STARTED
  COMPLETED
}

model DungeonLog {
  id                 String             @id @default(uuid()) @db.Uuid
  sequence           BigInt             @default(autoincrement())
  userId             String             @db.Uuid
  category           DungeonLogCategory
  action             DungeonLogAction
  status             DungeonLogStatus   @default(STARTED)
  floor              Int?
  turnNumber         Int?
  stateVersionBefore Int?
  stateVersionAfter  Int?
  delta              Json?
  extra              Json?
  createdAt          DateTime           @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId, sequence])
  @@index([category, action])
  @@index([createdAt])
}

model DungeonStateSnapshot {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @db.Uuid
  version      Int
  turnNumber   Int?
  createdAt    DateTime @default(now())
  statePayload Json
  reason       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, version])
  @@index([userId, turnNumber])
  @@index([createdAt])
}

model InventoryItem {
  id               String          @id @default(uuid()) @db.Uuid
  userId           String          @db.Uuid
  code             String
  slot             InventorySlot
  rarity           InventoryRarity
  modifiers        Json
  isEquipped       Boolean         @default(false)
  quantity         Int             @default(1)
  modifierVersion  Int             @default(0)
  enhancementLevel Int             @default(0)
  obtainedAt       DateTime        @default(now())
  version          Int             @default(1)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  // Partial unique index for equipped slot enforced via raw SQL migration.

  @@index([userId, slot])
  @@index([userId, code])
  @@index([userId, isEquipped])
}

model UserCollectionEntry {
  id                String                   @id @default(uuid()) @db.Uuid
  userId            String                   @db.Uuid
  targetType        UserCollectionTargetType
  targetCode        String
  firstDiscoveredAt DateTime
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, targetType, targetCode])
  @@index([userId, targetType])
  @@index([userId, createdAt])
}

model ApSyncLog {
  id                 String          @id @default(uuid()) @db.Uuid
  userId             String          @db.Uuid
  windowStart        DateTime
  windowEnd          DateTime
  contributions      Int
  apDelta            Int
  tokenType          ApSyncTokenType
  rateLimitRemaining Int?
  cursor             String?
  meta               Json?
  status             ApSyncStatus    @default(SUCCESS)
  errorCode          String?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, windowStart, windowEnd])
  @@index([userId, createdAt])
}

model GithubSyncState {
  userId                     String    @id @db.Uuid
  lastSuccessfulSyncAt       DateTime?
  lastManualSuccessfulSyncAt DateTime?
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
